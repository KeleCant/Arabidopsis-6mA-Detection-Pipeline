# Use an official Ubuntu base image
FROM ubuntu:22.04

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive \
    PATH="/opt/conda/bin:$PATH"

# Install essential system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    wget \
    bzip2 \
    ca-certificates \
    curl \
    nano \
    git \
    build-essential \
    make \
    gcc \
    zlib1g-dev \
    libcurl4-openssl-dev \
    libssl-dev \
    autoconf \
    automake \
    libtool \
    libbz2-dev \
    liblzma-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install Miniconda
RUN wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /tmp/miniconda.sh && \
    bash /tmp/miniconda.sh -b -p /opt/conda && \
    rm /tmp/miniconda.sh

# Set up Bioconda channels and install tools via Conda
RUN conda config --add channels defaults && \
    conda config --add channels bioconda && \
    conda config --add channels conda-forge && \
    conda config --set channel_priority strict && \
    conda install -y pbmm2 fastqc samtools deeptools nextflow ucsc-bedgraphtobigwig

# Install modbam2bed from source
RUN git clone --recursive https://github.com/epi2me-labs/modbam2bed.git /opt/modbam2bed && \
    cd /opt/modbam2bed && \
    make modbam2bed && \
    ln -s /opt/modbam2bed/modbam2bed /usr/local/bin/modbam2bed

# Install bedtools from source
RUN wget https://github.com/arq5x/bedtools2/releases/download/v2.29.1/bedtools-2.29.1.tar.gz && \
    tar -zxvf bedtools-2.29.1.tar.gz && \
    cd bedtools2 && \
    make && \
    cp bin/* /usr/local/bin/ && \
    cd .. && rm -rf bedtools2 bedtools-2.29.1.tar.gz

# Verify installations
RUN fastqc --version && \
    pbmm2 --version && \
    samtools --version && \
    deeptools --version && \
    nextflow -version && \
    modbam2bed --version && \
    bedtools --version && \
    bedGraphToBigWig 2>&1 | grep -q "bedGraphToBigWig v"

# Set working directory
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]
